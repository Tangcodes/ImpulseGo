<%- include("../partials/header") %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h3 class="mb-3 font-weight-normal text-center">Add New Comment to <%= record.content %></h3>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/records/<%= record._id %>/comments", method="POST">
                <div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text" required>
                </div>
				<div class=form-group>
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
            </form>
            <a href="/records/<%= record._id %>">Go Back</a>
        </div>
    </div>

<%- include("../partials/footer") %>