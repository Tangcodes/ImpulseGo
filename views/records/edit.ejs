<%- include("../partials/header") %>

	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
            <h3 class="mb-3 font-weight-normal text-center">Edit <%=  record.content %></h3>
        </div>
		<div class="col-xs-12 col-md-6 col-lg-4">
			<form action="/records/<%= record._id %>/?_method=PUT", method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="record[content]" id="content" value="<%= record.content %>" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="record[amount]" id="amount" value="<%= record.amount %>" required>
				</div>
				<div class="form-group">
					<p style="margin: 0">Is this impulse shopping?</p>
					<input type="radio" id="impulse" name="record[isImpulse]" value=true required>
					<label for="impulse">Yes</label>
					<input type="radio" id="notImpulse" name="record[isImpulse]" value=false required>
					<label for="notImpulse">No</label>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/records">Go Back</a>
		</div>
	</div>

<%- include("../partials/footer") %>